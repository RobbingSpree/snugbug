switch class
{
	case bun.thicc: image_blend = make_colour_rgb(243,200,200); image_index = bc_specs[class,deets.spr_index]; break;	//pink
	case bun.sticc: image_blend = make_colour_rgb(255,155,50);	image_index = bc_specs[class,deets.spr_index]; break;	//orange
	case bun.smol: image_blend = make_colour_rgb(133,218,255);	image_index = bc_specs[class,deets.spr_index]; break;	//light blue
	case bun.toll: image_blend = make_colour_rgb(71,231,71);	image_index = bc_specs[class,deets.spr_index]; break;		//light green
	case bun.lite: image_blend = make_colour_rgb(253,238,130);	image_index = bc_specs[class,deets.spr_index]; break;	//yellow
	case bun.nite: image_blend = make_colour_rgb(167,143,211);	image_index = bc_specs[class,deets.spr_index]; break;	//volet
}